    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch GO Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd":"/home/ubuntu/go/src/nettica-admin",
            "program": "/home/ubuntu/go/src/nettica-admin/cmd/nettica-api/main.go"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch dev.nettica.com",
            "url": "http://dev.nettica.com/",
            "webRoot": "${workspaceFolder}/ui",
            "tmpDir": "~/tmp"
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "cwd":"/home/ubuntu/go/src/nettica-admin/ui",
            "env" : { "VUE_APP_API_BASE_URL" : "https://dev.nettica.com/api/v1.0/"},
            "runtimeArgs": [
                "run",
                "serve"
            ],
            "runtimeExecutable": "npm",
            "type": "pwa-node"
        }
    ]
}